from browser import document
from browser import html
import random

id4 = document["id4"]
def autoguess(ev):
    執行次數 = 100
    總猜測次數 = 0
    for i in range(執行次數):
        id4 &lt;= "第" + str(i+1) + "次玩:" + html.BR()
        下限 = 1
        上限 = 100
        標準答案 = random.randint(下限, 上限)
        pc猜的數字 = random.randint(下限, 上限)
        #print(標準答案, pc猜的數字)
        #integer int()
        #string str()
        #float float()
        #你猜的數字 = int(input("請輸入您所猜的整數:"))
        猜測次數 = 1
        while 標準答案 != pc猜的數字:
            if 標準答案 &lt; pc猜的數字:
                #print("太大了，再猜一次 :)加油")
